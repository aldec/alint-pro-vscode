{
  "name": "alint-pro",
  "publisher": "aldec",
  "displayName": "ALINT-PRO",
  "description": "Integration with ALINT-PRO",
  "version": "1.0.0",
  "license": "Apache-2.0",
  "icon": "res/icon.png",
  "repository": "https://github.com/aldec/alint-pro-vscode",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Linters"
  ],
  "keywords": [
    "ASIC",
    "Bug",
    "Bugs",
    "Code Analysis",
    "Code Quality",
    "FPGA",
    "HDL",
    "Lint",
    "Linter",
    "Security",
    "SystemVerilog",
    "Tcl",
    "Verilog",
    "VHDL",
    "Vulnerabilities",
    "Vulnerability"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "alint-pro.lintFile",
        "title": "Lint file with ALINT-PRO"
      }
    ],
    "configuration": {
      "title": "ALINT-PRO",
      "type": "object",
      "properties": {
        "alintPro.additionalSystemVerilogOptions": {
          "description": "Additional SystemVerilog options",
          "type": "string"
        },
        "alintPro.additionalVHDLOptions": {
          "description": "Additional VHDL options",
          "type": "string"
        },
        "alintPro.alintProPath": {
          "description": "Path to ALINT-PRO instalation directory",
          "type": "string"
        },
        "alintPro.diagnosticLength": {
          "description": "Length of the diagnostic",
          "type": "number",
          "default": -1
        },
        "alintPro.maxRuleWarn": {
          "description": "Maximum number of violations per rule before stopping linting",
          "type": "number",
          "default": 10
        },
        "alintPro.maxWarn": {
          "description": "Maximum number of violations before stopping linting",
          "type": "number",
          "default": 100
        }
      }
    },
    "languages": [
      {
        "id": "systemverilog",
        "aliases": [
          "System Verilog",
          "systemverilog"
        ],
        "extensions": [
          ".sv",
          ".svh"
        ]
      },
      {
        "id": "verilog",
        "aliases": [
          "Verilog",
          "verilog"
        ],
        "extensions": [
          ".v",
          ".vh",
          ".vl"
        ]
      },
      {
        "id": "vhdl",
        "aliases": [
          "VHDL",
          "vhdl"
        ],
        "extensions": [
          ".vhd",
          ".vhdl",
          ".vho"
        ]
      }
    ],
    "taskDefinitions": [
      {
        "type": "alint-pro",
        "required": [],
        "properties": {}
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.mjs",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.mjs --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.mjs --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "format": "prettier . --write"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "prettier": "3.6.2",
    "sinon": "^21.0.0",
    "typescript": "^5.8.3"
  }
}
